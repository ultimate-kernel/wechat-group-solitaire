page {
    background-color: #fff;
    position: relative;
    width: 100%;
    height: 100%;
}

::-webkit-scrollbar {
  display: none;
}

.form-container {
	background-color: #f5f5f5;
	width: 100%;
	overflow-y: auto;
}

