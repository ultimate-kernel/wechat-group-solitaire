<wxs module="tool" src="./tool.wxs"></wxs>
<view class="form-container">
	<view class="form-item">
			<mp-cells ext-class="my-cells" title="">
          <mp-cell value="活动名称" footer="说明文字">
            <block>
              <input class="weui-input"  placeholder="请输入活动名称"/>
            </block>
            <view slot="footer">说明文字</view>
          </mp-cell>
      </mp-cells>
  </view>
  <view class="form-item" bindtap="openLocation">
